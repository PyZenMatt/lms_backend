{
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint .",
    "typecheck:e2e": "tsc -p tsconfig.e2e.json --noEmit",
    "e2e:ci": "npm run typecheck:e2e && playwright test --reporter=html",
    "e2e:report": "playwright show-report"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}
